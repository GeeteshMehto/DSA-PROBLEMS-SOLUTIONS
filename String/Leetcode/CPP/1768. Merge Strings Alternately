/*
Question Link :- https://leetcode.com/problems/merge-strings-alternately/
*/


class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        string ans;
        int n = min(word1.length(), word2.length());

        for (int i = 0; i < n; i++) {
            ans += word1[i];
            ans +=Â word2[i];
        }

        return ans + word1.substr(n) + word2.substr(n);
    }
};

